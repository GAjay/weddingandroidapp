<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_color_cream">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_main_logo" />

        <com.example.gdjkj.myapplication.views.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="41dp"
            android:gravity="center"
            android:layout_marginTop="-30dp"
            android:text="Mayank Weds Sheetal"
            android:textAlignment="center"
            android:textColor="@color/splashbg"
            android:textSize="18sp" />

    </LinearLayout>

    <com.example.gdjkj.myapplication.views.BoldTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:text="@string/weddings"
        android:textAlignment="center"
        android:textColor="@color/splashbg"
        android:textSize="20dp" />

    <com.example.gdjkj.myapplication.views.RegularTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/made_in_heaven"
        android:textAlignment="center"
        android:textColor="@color/splashbg"
        android:textSize="12dp" />
</RelativeLayout>