<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splashbg"
    android:orientation="vertical"
    tools:context="com.example.gdjkj.myapplication.activites.DashboardActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:fitsSystemWindows="true"
            android:background="@drawable/drawable_circle_bg_toolbar">
           <com.example.gdjkj.myapplication.views.DancingTextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/screenbg"
               android:text="@string/gm"
               android:textSize="20dp"
               android:padding="3dp"/>
        </LinearLayout>

        <com.example.gdjkj.myapplication.views.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/screenbg"
            android:text="@string/gaurav_amp_madhuri"
            android:textSize="18sp"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:background="@color/screenbg"
        app:tabIndicatorColor="@color/splashbg"
        app:tabIndicatorHeight="3dp"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenbg"/>
</LinearLayout>
